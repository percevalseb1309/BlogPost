{% extends 'template.twig' %}

{% block title %}
    {{ post.title }}
{% endblock %}

{% block content %}
    <h1>Mon blog !</h1>
    <p>
    	<a href="{{ base_url }}">Retour à la liste des billets</a><br>
    	<a href="index.php/post/post/{{ post.id }}">Retour au billet</a>
    </p>

    <form action="index.php/post/editPost/{{ post.id }}" method="post">
    	<h2>Modifier le billet</h2>
        <div>
            <label for="author">Auteur</label><br />
            <input type="text" id="author" name="author" value="{{ post.author }}" />
        </div>	    
        <div>
            <label for="title">Titre</label><br />
            <input type="text" id="title" name="title" value="{{ post.title }}" />
        </div>
        <div>
            <label for="lead_paragraph">Chapô</label><br />
            <textarea id="lead_paragraph" name="lead_paragraph">{{ post.lead_paragraph|nl2br }}</textarea>
        </div>	    
        <div>
            <label for="content">Contenu</label><br />
            <textarea id="content" name="content">{{ post.content|nl2br }}</textarea>
        </div>
        <div>
            <input type="submit" />
        </div>
    </form>
{% endblock %}